{
    "name": "accessafya/infobip",
    "type": "library",
    "description": "Infobip SMS",
    "keywords": ["Infobip", "SMS"],
    "license": "MIT",
    "require": {
        "php": "~7.2",
        "guzzlehttp/guzzle": "^7.0",
        "vlucas/phpdotenv": "^5.1"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=8.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "AccessAfya\\Infobip\\": "src/"
        }
    },
     "autoload-dev": {
        "psr-4": {
            "AccessAfya\\Infobip\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Mwashighadi Joram",
            "email": "jomwashighadi@gmail.com",
            "homepage": "https://github.com/reaper45",
            "role": "Developer"
        }
    ],
    "config": {
        "sort-packages": true
    },
     "scripts": {
        "test": "phpunit --colors=always",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    }
}
